<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/Calculator_Table_Layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/Result_Row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/row_margin_left"
            android:gravity="end">

            <TextView
                android:id="@+id/Result_TextView"
                android:layout_width="@dimen/result_label_width"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/row_margin_right"
                android:layout_span="4"
                android:text="0"
                android:textAlignment="textEnd"
                android:textSize="@dimen/result_text_size" />

        </TableRow>

        <TableRow
            android:id="@+id/Top_Operator_Row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/row_margin_left">

            <Button
                android:id="@+id/Clear_Button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/button_margin_left"
                android:layout_marginEnd="@dimen/button_margin_right"
                android:backgroundTint="@color/clear_button_red"
                android:text="@string/clear_button"
                android:textColor="@color/white"
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/Backspace_Button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_column="1"
                android:layout_marginStart="@dimen/button_margin_left"
                android:layout_marginEnd="@dimen/button_margin_right"
                android:backgroundTint="@color/backspace_orange"
                android:text="@string/backspace_button"
                android:textColor="@color/black"
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/Percent_Button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/button_margin_left"
                android:layout_marginEnd="@dimen/button_margin_right"
                android:backgroundTint="@color/operator_button_green"
                android:text="@string/percent_button"
                android:textColor="@color/black"
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/Divide_Button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/button_margin_left"
                android:layout_marginEnd="@dimen/button_margin_right"
                android:backgroundTint="@color/operator_button_green"
                android:text="@string/divide_button"
                android:textColor="@color/black"
                android:textSize="@dimen/button_font_size" />

        </TableRow>

        <TableRow
            android:id="@+id/Top_Button_Row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/row_margin_left">

            <Button
                android:id="@+id/Seven_Button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/button_margin_left"
                android:layout_marginEnd="@dimen/button_margin_right"
                android:backgroundTint="@color/number_button_blue"
                android:text="@string/seven_button"
                android:textColor="@color/white"
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/Eight_Button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_column="1"
                android:layout_marginStart="@dimen/button_margin_left"
                android:layout_marginEnd="@dimen/button_margin_right"
                android:backgroundTint="@color/number_button_blue"
                android:text="@string/eight_button"
                android:textColor="@color/white"
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/Nine_Button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/button_margin_left"
                android:layout_marginEnd="@dimen/button_margin_right"
                android:backgroundTint="@color/number_button_blue"
                android:text="@string/nine_button"
                android:textColor="@color/white"
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/Multiply_Button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/button_margin_left"
                android:layout_marginEnd="@dimen/button_margin_right"
                android:backgroundTint="@color/operator_button_green"
                android:text="@string/multiply_button"
                android:textColor="@color/black"
                android:textSize="@dimen/button_font_size" />

        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>